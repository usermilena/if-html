include ../components/mixins

mixin reviews-item(id, $price, $hotel, $location, $rating, $score, name, $country, $review)
  li.reviews__item.col-lg-4.col-sm-6
    div(id=id).reviews__item--img
      .reviews__item--price
        | From
        |
        span= $price
    .reviews__item--caption
      .reviews__item--caption__hotel-score--wrapper
        .reviews__item--caption__hotel--wrapper
          .reviews__item--caption__hotel= $hotel
          .reviews__item--caption__location= $location
        .reviews__item--caption__score--wrapper
          .reviews__item--caption__score= $rating
          .reviews__item--caption__reviews-amount= $score
      .reviews__item--caption__user--wrapper
        svg.reviews__item--caption__user-avatar
          use(href='#user-avatar')
        .reviews__item--caption__user-name--wrapper
          .reviews__item--caption__user-name= name
          .reviews__item--caption__user-country= $country
      .reviews__item--caption__user-review= $review

